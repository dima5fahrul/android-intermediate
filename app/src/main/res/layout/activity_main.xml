<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_move_to_advanced_ui"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/advanced_ui" />

    <Button
        android:id="@+id/btn_move_to_animation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/animation" />

    <Button
        android:id="@+id/btn_move_to_localization"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/localization" />

    <Button
        android:id="@+id/btn_move_to_service"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/service" />
</LinearLayout>
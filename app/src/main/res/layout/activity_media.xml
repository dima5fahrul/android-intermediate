<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".media.MediaActivity">

    <Button
        android:id="@+id/btn_move_to_sound_pool"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/soundpool" />

    <Button
        android:id="@+id/btn_move_to_media_player"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/media_player" />

    <Button
        android:id="@+id/btn_move_to_exo_player"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/exo_player" />

    <Button
        android:id="@+id/btn_move_to_camera_gallery"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/camera_gallery" />
</LinearLayout>
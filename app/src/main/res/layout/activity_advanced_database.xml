<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".advanced_database.AdvancedDatabaseActivity">

    <Button
        android:id="@+id/btn_move_to_database_relation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/database_relation" />

    <Button
        android:id="@+id/btn_move_to_database_paging"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/database_paging" />

</LinearLayout>
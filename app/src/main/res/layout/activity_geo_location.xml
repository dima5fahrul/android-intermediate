<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".geo_location.GeoLocationActivity">

    <Button
        android:id="@+id/btn_move_to_google_maps"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/google_maps" />

    <Button
        android:id="@+id/btn_move_to_maps_tracker"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/maps_tracker" />

    <Button
        android:id="@+id/btn_move_to_maps_fence"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/maps_fence" />

</LinearLayout>